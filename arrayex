/*
WAP to return true if the 1st number and last number of array is same
 */
public class arrayex 
{
	public boolean display(int[] arr)
	{
		if(arr.length>=2)
		{
			if(arr[0]==arr[arr.length-1])
				return true;
			else
				return false;
		}
		else
		{
			for(int x:arr)
			{
				System.out.println(x);
			}
		}
		return false;
		
	}
	
	
	public static void main(String[] args)
	{
		int[] arr= {1,2,3,1};
		boolean flag=new arrayex().display(arr);
		System.out.println(flag);
	}
}
