package Pattern_Programs;

public class pp55 
{
	public static void main(String[] args) 
	{
		int k=0,m;
		for(int i=1;i<=7;i++)
		{
			m=3;
			if(i<=4)
				k++;
			else
				k--;
			for(int j=1;j<=4;j++)
			{
				if(j<=k)
				{
					System.out.print(m);
					m--;
					
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
}
