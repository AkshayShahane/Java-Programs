
/*
				A   
			   ABA  
			  ABCBA 
			 ABCDCBA


*/

public class pp5 
{
	public static void main(String[] args) 
	{
		char ch;
		for(int i=1;i<=4;i++)
		{
			ch='A';
			for(int j=1;j<=7;j++)
			{
				if(j>=5-i && j<=3+i)
				{
					if(j<4)
					{
						System.out.print(ch);
						ch++;
					}
					else
					{
						System.out.print(ch);
						ch--;
					}
				}
				else
				{
					System.out.print(" ");
				}
			}
			System.out.println();
		}
	}
}
